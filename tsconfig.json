{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "types": ["node"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@agent-relay/protocol": ["packages/protocol/dist/index.d.ts"],
      "@agent-relay/protocol/*": ["packages/protocol/dist/*"],
      "@agent-relay/config": ["packages/config/dist/index.d.ts"],
      "@agent-relay/config/*": ["packages/config/dist/*"],
      "@agent-relay/storage": ["packages/storage/dist/index.d.ts"],
      "@agent-relay/storage/*": ["packages/storage/dist/*"],
      "@agent-relay/bridge": ["packages/bridge/dist/index.d.ts"],
      "@agent-relay/bridge/*": ["packages/bridge/dist/*"],
      "@agent-relay/continuity": ["packages/continuity/dist/index.d.ts"],
      "@agent-relay/continuity/*": ["packages/continuity/dist/*"],
      "@agent-relay/trajectory": ["packages/trajectory/dist/index.d.ts"],
      "@agent-relay/trajectory/*": ["packages/trajectory/dist/*"],
      "@agent-relay/hooks": ["packages/hooks/dist/index.d.ts"],
      "@agent-relay/hooks/*": ["packages/hooks/dist/*"],
      "@agent-relay/state": ["packages/state/dist/index.d.ts"],
      "@agent-relay/state/*": ["packages/state/dist/*"],
      "@agent-relay/policy": ["packages/policy/dist/index.d.ts"],
      "@agent-relay/policy/*": ["packages/policy/dist/*"],
      "@agent-relay/memory": ["packages/memory/dist/index.d.ts"],
      "@agent-relay/memory/*": ["packages/memory/dist/*"],
      "@agent-relay/utils": ["packages/utils/dist/index.d.ts"],
      "@agent-relay/utils/*": ["packages/utils/dist/*"],
      "@agent-relay/resiliency": ["packages/resiliency/dist/index.d.ts"],
      "@agent-relay/resiliency/*": ["packages/resiliency/dist/*"],
      "@agent-relay/user-directory": ["packages/user-directory/dist/index.d.ts"],
      "@agent-relay/user-directory/*": ["packages/user-directory/dist/*"],
      "@agent-relay/cloud": ["packages/cloud/dist/index.d.ts"],
      "@agent-relay/cloud/*": ["packages/cloud/dist/*"],
      "@agent-relay/daemon": ["packages/daemon/dist/index.d.ts"],
      "@agent-relay/daemon/*": ["packages/daemon/dist/*"],
      "@agent-relay/dashboard-server": ["packages/dashboard-server/dist/index.d.ts"],
      "@agent-relay/dashboard-server/*": ["packages/dashboard-server/dist/*"],
      "@agent-relay/dashboard": ["packages/dashboard/dist/index.d.ts"],
      "@agent-relay/dashboard/*": ["packages/dashboard/dist/*"],
      "@agent-relay/wrapper": ["packages/wrapper/dist/index.d.ts"],
      "@agent-relay/wrapper/*": ["packages/wrapper/dist/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/**/*.test.ts", "src/dashboard/**/*", "src/landing/**/*", "packages/**/*"]
}
