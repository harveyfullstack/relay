{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "types": ["node"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@relay/protocol": ["packages/protocol/src/index.ts"],
      "@relay/protocol/*": ["packages/protocol/src/*"],
      "@relay/config": ["packages/config/src/index.ts"],
      "@relay/config/*": ["packages/config/src/*"],
      "@relay/storage": ["packages/storage/src/index.ts"],
      "@relay/storage/*": ["packages/storage/src/*"],
      "@relay/bridge": ["packages/bridge/src/index.ts"],
      "@relay/bridge/*": ["packages/bridge/src/*"],
      "@relay/continuity": ["packages/continuity/src/index.ts"],
      "@relay/continuity/*": ["packages/continuity/src/*"],
      "@relay/trajectory": ["packages/trajectory/src/index.ts"],
      "@relay/trajectory/*": ["packages/trajectory/src/*"],
      "@relay/hooks": ["packages/hooks/src/index.ts"],
      "@relay/hooks/*": ["packages/hooks/src/*"],
      "@relay/state": ["packages/state/src/index.ts"],
      "@relay/state/*": ["packages/state/src/*"],
      "@relay/policy": ["packages/policy/src/index.ts"],
      "@relay/policy/*": ["packages/policy/src/*"],
      "@relay/memory": ["packages/memory/src/index.ts"],
      "@relay/memory/*": ["packages/memory/src/*"],
      "@relay/utils": ["packages/utils/src/index.ts"],
      "@relay/utils/*": ["packages/utils/src/*"],
      "@relay/resiliency": ["packages/resiliency/src/index.ts"],
      "@relay/resiliency/*": ["packages/resiliency/src/*"],
      "@relay/user-directory": ["packages/user-directory/src/index.ts"],
      "@relay/user-directory/*": ["packages/user-directory/src/*"],
      "@relay/cloud": ["packages/cloud/src/index.ts"],
      "@relay/cloud/*": ["packages/cloud/src/*"],
      "@relay/daemon": ["packages/daemon/src/index.ts"],
      "@relay/daemon/*": ["packages/daemon/src/*"],
      "@agent-relay/wrapper": ["packages/wrapper/src/index.ts"],
      "@agent-relay/wrapper/*": ["packages/wrapper/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/**/*.test.ts", "src/dashboard/**/*", "src/landing/**/*"]
}
