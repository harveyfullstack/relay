{
  "name": "agent-relay",
  "version": "1.0.0",
  "description": "Real-time agent-to-agent communication system for CLI agents (Claude Code, Codex, Cursor)",
  "author": "khaliqgant",
  "license": "MIT",
  "repository": "https://github.com/khaliqgant/agent-relay",
  "homepage": "https://github.com/khaliqgant/agent-relay",
  "packages": [
    {
      "name": "using-agent-relay",
      "version": "1.0.0",
      "description": "Skill for coordinating multiple AI agents - enables real-time inter-agent messaging via PTY wrapper or file-based inbox system",
      "format": "claude",
      "subtype": "skill",
      "tags": [
        "multi-agent",
        "agent-communication",
        "inter-agent",
        "coordination",
        "real-time",
        "messaging"
      ],
      "files": [
        ".claude/skills/using-agent-relay/SKILL.md"
      ]
    },
    {
      "name": "agent-relay-inbox-hook",
      "version": "1.0.0",
      "description": "Hook that checks agent inbox on Stop events - enables file-based inter-agent messaging for Claude Code",
      "format": "claude",
      "subtype": "hook",
      "tags": [
        "multi-agent",
        "inbox",
        "hook",
        "stop-event",
        "messaging"
      ],
      "files": [
        "dist/hooks/inbox-check/hook.js",
        "dist/hooks/inbox-check/types.js",
        "dist/hooks/inbox-check/utils.js"
      ],
      "hook_event": "Stop",
      "env": {
        "AGENT_RELAY_NAME": {
          "description": "Agent name for relay identification",
          "required": false,
          "default": null
        },
        "AGENT_RELAY_INBOX_DIR": {
          "description": "Directory for inbox files",
          "required": false,
          "default": "/tmp/agent-relay"
        }
      }
    }
  ]
}
