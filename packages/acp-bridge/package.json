{
  "name": "@agent-relay/acp-bridge",
  "version": "2.1.13",
  "description": "ACP (Agent Client Protocol) bridge for Agent Relay - expose relay agents to ACP-compatible editors like Zed",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "relay-acp": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "agent-relay",
    "acp",
    "agent-client-protocol",
    "zed",
    "ai-agent",
    "editor-integration"
  ],
  "author": "Khaliq Gant",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AgentWorkforce/relay.git",
    "directory": "packages/acp-bridge"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@agent-relay/sdk": "2.1.13",
    "@agentclientprotocol/sdk": "^0.12.0"
  },
  "devDependencies": {
    "@types/node": "^22.19.3",
    "typescript": "^5.9.3",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
