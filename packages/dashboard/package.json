{
  "name": "@agent-relay/dashboard",
  "version": "1.0.0",
  "description": "Web dashboard for Agent Relay - optional package for visual agent coordination",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "ui-dist",
    "README.md"
  ],
  "scripts": {
    "build": "npm run build:server && npm run build:ui",
    "build:server": "tsc",
    "build:ui": "cd ui && npm ci && npm run build && rm -rf ../ui-dist && mv out ../ui-dist",
    "clean": "rm -rf dist ui-dist",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "peerDependencies": {
    "agent-relay": ">=1.6.0"
  },
  "peerDependenciesMeta": {
    "agent-relay": {
      "optional": false
    }
  },
  "dependencies": {
    "@agent-relay/protocol": "*",
    "@agent-relay/config": "*",
    "@agent-relay/storage": "*",
    "@agent-relay/bridge": "*",
    "@agent-relay/utils": "*",
    "@agent-relay/resiliency": "*",
    "@agent-relay/trajectory": "*",
    "@agent-relay/cloud": "*",
    "@agent-relay/daemon": "*",
    "@agent-relay/user-directory": "*",
    "@agent-relay/wrapper": "*",
    "express": "^4.21.2",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/node": "^22.19.3",
    "@types/ws": "^8.18.1",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AgentWorkforce/relay.git",
    "directory": "packages/dashboard"
  },
  "keywords": [
    "agent-relay",
    "dashboard",
    "web-ui",
    "agent-coordination"
  ],
  "license": "MIT"
}
